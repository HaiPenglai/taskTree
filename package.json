{
  "name": "tasktree",
  "version": "1.0.0",
  "description": "Helps reduce procrastination, ADHD, and decision fatigue through hierarchical task organization and task recommendations.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64",  
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "com.haipenglai.tasktree",       
    "productName": "TaskTree",                
    "icon": "build/icon.ico",
    "win": {
      "target": "nsis",                       
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,                      
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": ["productivity", "ADHD", "task-management"],
  "author": "HaiPenglai",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",                    
    "electron-builder": "^24.11.3",          
    "@electron/packager": "^18.0.0"          
  },
  "dependencies": {
    "@electron/get": "^4.0.0"                
  }
}