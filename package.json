{
  "name": "tasktree",
  "version": "1.0.0",
  "description": "Helps reduce procrastination, ADHD, and decision fatigue through hierarchical task organization and task recommendations.",
  "main": "main.js",
  "scripts": {
    "ui": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "start": "electron . --enable-logging",
    "pack": "electron-builder --dir",
    "installer": "electron-builder --win --x64"
  },
  "build": {
    "appId": "com.haipenglai.tasktree",
    "productName": "TaskTree",
    "icon": "build/icon.ico",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "main.js"
    ]
  },
  "keywords": [
    "productivity",
    "ADHD",
    "task-management"
  ],
  "author": "HaiPenglai",
  "license": "ISC",
  "devDependencies": {
    "@vue/cli-plugin-babel": "^5.0.8",
    "@vue/cli-plugin-router": "^5.0.8",
    "electron": "^28.0.0",
    "electron-builder": "^24.11.3",
    "electron-devtools-installer": "^3.2.0"
  },
  "dependencies": {
    "@electron/get": "^4.0.0",
    "vue": "^3.3.4"
  }
}