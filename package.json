{
  "name": "tasktree",
  "version": "1.0.0",
  "author": "HaiPenglai",
  "description": "Helps reduce procrastination, ADHD, and decision fatigue through hierarchical task organization and task recommendations.",
  "keywords": [
    "productivity",
    "ADHD",
    "task-management"
  ],
  "license": "ISC",
  "main": "main.js",
  "scripts": {
    "ui": "vue-cli-service serve",
    "build": "vue-cli-service build --dest dist-vue",
    "start": "electron . --enable-logging",
    "pack": "electron-builder --dir",
    "installer": "electron-builder --win --x64",
    "serve": "node server/taskTreeAPI.js"
  },
  "build": {
    "appId": "com.haipenglai.tasktree",
    "npmRebuild": false,
    "productName": "TaskTree",
    "icon": "public/favicon.ico",
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/favicon.ico",
      "uninstallerIcon": "public/favicon.ico"
    },
    "files": [
      "dist-vue/**/*",
      "main.js"
    ],
    "extraResources": [
      {
        "from": "server",
        "to": "server",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^5.0.8",
    "@vue/cli-plugin-router": "^5.0.8",
    "electron": "^28.0.0",
    "electron-builder": "^24.11.3",
    "electron-devtools-installer": "^3.2.0"
  },
  "dependencies": {
    "@electron/get": "^4.0.0",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "vue": "^3.3.4"
  }
}